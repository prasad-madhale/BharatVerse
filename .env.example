# BharatVerse Backend Configuration
# Copy this file to .env and fill in your actual values

# LLM Provider (choose one: gemini, anthropic, openai, groq)
LLM_PROVIDER=gemini

# LLM API Keys (provide the key for your chosen provider)
# Google Gemini (FREE - Recommended for MVP)
GEMINI_API_KEY=your_gemini_api_key_here  # Get from: https://makersuite.google.com/app/apikey

# Anthropic Claude (Paid)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI (Paid)
# OPENAI_API_KEY=your_openai_api_key_here

# Groq (FREE - Fast inference)
# GROQ_API_KEY=your_groq_api_key_here  # Get from: https://console.groq.com/

# Optional: Override default model
# LLM_MODEL=gemini-1.5-flash  # For Gemini
# LLM_MODEL=claude-3-haiku-20240307  # For Anthropic
# LLM_MODEL=gpt-3.5-turbo  # For OpenAI
# LLM_MODEL=llama-3.1-70b-versatile  # For Groq

# JWT Authentication
JWT_SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32

# OAuth Credentials (Optional for MVP)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Application Settings
DEBUG=false
API_HOST=0.0.0.0
API_PORT=8000

# Database
DATABASE_PATH=./bharatverse.db

# Content Storage
ARTICLES_STORAGE_PATH=./articles
