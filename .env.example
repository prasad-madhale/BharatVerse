# BharatVerse Backend Configuration
# Copy this file to .env and fill in your actual values

# LLM API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here  # Optional, for embeddings

# JWT Authentication
JWT_SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32

# OAuth Credentials (Optional for MVP)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Application Settings
DEBUG=false
API_HOST=0.0.0.0
API_PORT=8000

# Database
DATABASE_PATH=./bharatverse.db

# Content Storage
ARTICLES_STORAGE_PATH=./articles
